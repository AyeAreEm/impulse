@import "base/time.imp";
@import "base/random.imp";

int main :: () {
    random.seed(Time.since_epoch());

    []str greetings: |str.from("hello") str.from("hi") str.from("hey")|;
    str greet: random.choice(greetings);

    i64 since_epoch: Time.since_epoch();
    Time current_time: Time.local(&since_epoch);

    println("%s it's currently: %02d:%02d" greet.data [current_time.hour - 12] current_time.minute);
}

@import "stdio.h"

struct person: {
    string name
    int age
}

_() main: {
    person base: {
        name: ""
        age: 0
    }

    person john: {
        name: "john"
        age: 17
    }

    base.name: john.name;
    john.name: "john doe"
    base.age: [john.age + 1]

    # it should print
    # john
    # john doe
    # 18

    @c [
        printf("%s\n", base.name.data);
        printf("%s\n", john.name.data);
        printf("%d\n", base.age);
    ]
}

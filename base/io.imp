@import "base/string.imp";

@inline char c_getchar :: () {
    @c [return getchar();];
}

string io.input :: () {
    string word: string.new();
    bool newline: false;

    loop (!newline) {
        char ch: c_getchar();
        @c [
            if (ch == '\n') {
                break;
            }
        ];
        string.push_char(&word ch);
    }

    return word;
}

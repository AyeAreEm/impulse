# Environment related library

enum OS :: {
    Windows32;
    Windows64;
    Linux;
    MacOS;
    Unkown;
}

OS OS.get :: () {

@c [
#ifdef _WIN64
    return OS_Windows64;
#elif _WIN32
    return OS_Windows32;
#elif __APPLE__
    #ifdef __MACH__
        return OS_MacOS;
    #else
        return OS_Unkown;
    #endif
#elif __linux__
    return OS_Linux;
#endif
];

}
